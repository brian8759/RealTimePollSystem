extends layout

block content
  h1= title
  p Welcome to #{title}
  // load all those lib first
  script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.js')
  script(src='https://code.angularjs.org/1.2.26/angular-animate.js')
  script(src='https://code.angularjs.org/1.2.26/angular-resource.js')
  script(src='https://code.angularjs.org/1.2.26/angular-route.js')
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
  script(src="http://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.11.2.js")
  link(href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css', rel='stylesheet')
  // load user scripts
  script(src='/socket.io/socket.io.js')
  script(src='/javascripts/ng-app.js')
  script(src='/javascripts/ng-controllers.js')
  script(src='/javascripts/ng-services.js')
  // make a shortcut for "all list"
  div(ng-controller="PollListController")
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      div.navbar-header
        a.navbar-brand(href='#/polls') Polls

  // different views corresponding to different routers    
  div.container
    div(ng-view)

